 <%= javascript_include_tag "stereotabs" %>

<script type="text/javascript">
	Event.observe(window, 'load', loadTabs, false);
	function loadTabs() {
		var tabs = new tabset('container'); // name of div to crawl for tabs and panels
		tabs.autoActivate($('tab_uno')); // name of tab to auto-select if none exists in the url
	}
</script>

<%= error_messages_for 'modelo' %>


<div id="container" class="tab">
<ul id="tabnav">
  <a href="#uno" id="tab_uno" class="tab selected" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Identificaci&oacute;n</a>
  <a href="#diez" id="tab_diez" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">L&oacute;gica Apli.</a>
  <a href="#cuatro" id="tab_cuatro" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Evaluaci&oacute;n</a>
  <a href="#cinco" id="tab_cinco" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Complementos</a>

  <% if controller.action_name != 'new' %>
	  <a href="#seis" id="tab_seis" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Limitaciones</a>
	  <a href="#dos" id="tab_dos" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Autores</a>
	  <a href="#tres" id="tab_tres" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Bibliograf&iacute;a</a>
	  <a href="#nueve" id="tab_nueve" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">&Aacute;reas</a>
	  <a href="#once" id="tab_once" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Implementaciones</a>
  <% else %>
	  <a href="#guarda" id="tab_guarda" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Limitaciones</a>
      <a href="#guarda" id="tab_guarda" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Autores</a>
	  <a href="#guarda" id="tab_guarda" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Bibliograf&iacute;a</a>
	  <a href="#guarda" id="tab_guarda" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">&Aacute;reas</a>
	  <a href="#guarda" id="tab_guarda" class="tab" onclick="setTimeout('redimensionar(parent.iframe)', 3000)">Implementaciones</a>
  <% end %>
</ul>


