    <td class="barra_activa_<%= clase.to_s %>">

	<% if current_user.Check(ientrada) %>
	    <a href="#" onclick="mostrarDireccion('<%= prefijo%>','<%= ientrada.id.to_s %>', '<%= url_for :controller => 'kactors', :action => 'formulario_ikepler_ientrada' %>/');">Modificar</a>
	<% end %>

    </td>
    <td class="barra_activa_<%= clase.to_s %>">

